        o.`status`,
        o.delivery_sn,
        o.delivery_company,
        o.auto_confirm_day,
        o.integration,
        o.growth,
        o.bill_type,
        o.bill_content,
        o.bill_receiver_phone,
        o.bill_header,
        o.bill_receiver_email,
        o.receiver_name,
        o.receiver_phone,
        o.receiver_post_code,
        o.receiver_province,
        o.receiver_city,
        o.receiver_region,
        o.receiver_detail_address,
        o.note,
        o.confirm_status,
        o.delete_status,
        o.use_integration,
        o.payment_time,
        o.delivery_time,
        o.receive_time,
        o.comment_time,
        o.modify_time,
        o.out_trade_no,
        o.total_pay_amount,
        oi.id AS `order_item_id`,
        oi.spu_id,
        oi.spu_name,
        oi.spu_pic,
        oi.spu_brand,
        oi.category_id,
        oi.sku_id,
        oi.sku_name,
        oi.sku_pic,
        oi.sku_price,
        oi.sku_quantity,
        oi.sku_attrs_vals,
        oi.promotion_amount AS item_promotion_amount,
        oi.coupon_amount AS item_coupon_amount,
        oi.integration_amount AS item_integration_amount,
        oi.real_amount,
        oi.gift_integration,
        oi.gift_growth
        FROM oms_order o
        LEFT JOIN oms_order_item oi ON o.order_sn = oi.order_sn
        <where>
            o.member_id = #{memberId}
            <if test="status != null and status >=0">
                AND o.`status` = #{status}
            </if>
            <if test="key != null and key != ''">
                AND (o.order_sn LIKE CONCAT('%',#{key},'%') OR oi.sku_name LIKE CONCAT('%',#{key},'%'))
            </if>
        </where>
        LIMIT #{limit}
        OFFSET #{offset}
    </select>
